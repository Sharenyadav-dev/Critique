{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 520,
  "background": "white",
  "projection": {"type": "equalEarth"},

  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "#f9fafb"}
    },
    {
      "data": {"graticule": {"step": [30, 30]}},
      "mark": {"type": "geoshape", "stroke": "#d1d5db", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {"url": "vl/data/books_published_2025.csv", "format": {"type": "csv"}},
            "key": "country",
            "fields": ["BooksPublishedPerYear", "BooksPublishedDataYear"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "BooksPublishedPerYear",
          "type": "quantitative",
          "title": "Books Published per Year",
          "scale": {"scheme": "oranges"}
        },
        "tooltip": [
          {"field": "properties.name", "title": "Country"},
          {"field": "BooksPublishedPerYear", "title": "Books Published"},
          {"field": "BooksPublishedDataYear", "title": "Data Year"}
        ]
      }
    }
  ],

  "config": {
    "view": {"stroke": null},
    "legend": {
      "titleColor": "#1e293b",
      "labelColor": "#1e293b",
      "orient": "bottom"
    }
  }
}
